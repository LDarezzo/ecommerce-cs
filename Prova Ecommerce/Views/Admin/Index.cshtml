@model IEnumerable<Prova_Ecommerce.Models.Produto>

@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2 class="text-center">Lista Produtos</h2>

    <div class="mb-3 text-end">
        <a href="/admin/cadastrar" class="btn btn-danger">
            <i class="fa-solid fa-plus"></i>
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Imagem</th>
                <th>Preço</th>
                <th>Preço com Desconto</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Nome</td>
                    <td class="align-middle">
                        <img src="@item.Imagem" alt="Imagem" class="img-thumbnail w-25" />
                    </td>
                    <td class="align-middle" style="white-space: nowrap;">
                        R$ @(item.Preco.ToString("N2", new System.Globalization.CultureInfo("pt-BR")))
                    </td>
                    <td class="align-middle" style="white-space: nowrap;">
                        R$ @(item.Comdesconto.HasValue ? item.Comdesconto.Value.ToString("N2", new System.Globalization.CultureInfo("pt-BR")) : "N/A")
                    </td>
                    <td class="align-middle col-6">@item.Descricao</td>
                    <td class="align-middle">
                        <a href="/admin/editar?id=@item.ID" class="btn btn-success btn-sm me-2 mb-1">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/admin/excluir?id=@item.ID" class="btn btn-danger btn-sm"
                           onclick="return confirm('Deseja excluir?')">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
