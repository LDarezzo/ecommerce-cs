@model Prova_Ecommerce.Models.Produto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Produto</h2>

    <form action="/admin/editar" name="editarForm" id="editarForm" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Produto</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="mb-3 row">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.Imagem, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    <img src="@Model.Imagem" alt="Imagem" class="img-thumbnail w-25 mb-2" />
                    <input id="imagemInput" name="imagemInput" class="form-control" type="file" accept=".jpg,.jpeg,.png"/>
                </div>
            </div>

            <div class="mb-3 row">
                <label class = "col-md-2 col-form-label">Preço</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-md-2 col-form-label">Preço com desconto</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Comdesconto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Comdesconto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-md-2 col-form-label">Descrição</label>
                <div class="col-md-10">
                    <textarea id="descricaoInput" name="descricaoInput" class="form-control" rows="5" required>@Model.Descricao</textarea>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-md-offset-2 col-md-10 text-center">
                    <a href="/admin/index" class="btn btn-danger me-2"><i class="fas fa-arrow-left"></i> Voltar</a>
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>
